<script defer src="../js/findAlbum.js"></script>
<link rel="stylesheet" href="../styles/registerLogin.css">

<div class="row">
  <div class="col">
    <nav class="nav navLinks">
      <a class="nav-link" href="/">Home</a>
      <a class="nav-link" href="/myAlbum">My Album</a>
      <a class="nav-link" href="/getPhoto">Get Photo</a>
      <a class="nav-link" href="/about">About Us</a>
      <a class="nav-link" href="/logout">log out</a>
    </nav>
  </div>
</div>
<div class="row my-5">
  <div class="col-md-2"></div>
  <div class="col-md-8 text-center">
    <h1>Find Albums of Friends</h1>
  </div>
  <div class="col-md-2"></div>
</div>
<div class="row my-5">
  <div class="col-md-3"></div>
  <div class="col-md-6 boxDiv">
    {{#if message}}
      <p class="text-danger">Nothing found</p>
    {{/if}}
    <form id="findAlbum" method="post" action="/findAlbum/new">
      <div class="mb-3">
        <label for="getEmail" class="form-label">Enter email</label>
        <input type="email" class="form-control" name="getEmail" id="getEmail" aria-describedby="emailHelp" placeholder="example@email.com">
        <div id="emailHelp" class="form-text">Example: example@email.com</div>
      </div>
      <div class="d-grid gap-2">
        <button class="btn btn-outline-warning" type="submit">Get Album</button>
      </div>
    </form>
  </div>
  <div class="col-md-3"></div>
</div>
