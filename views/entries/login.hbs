<div class="row my-3">
  <div class="col-md-12 text-center">
    <h1>Register or Login</h1>
  </div>
</div>
<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4 y-5 boxDiv">
    <div class="row">
      <div class="col-md-12">
        <form id="logForm">
          <div class="form-group my-2">
            <label for="username">Email</label>
            <input type="email" name="email" class="form-control" placeholder="Enter email" id="email" required>
          </div>
          <div class="form-group my-2">
            <label for="password">Password:</label>
            <input type="password" name="password" class="form-control" placeholder="Enter password" id="password" required>
          </div>
          <div class="d-grid gap-2 mt-5">
            <button type="submit" class="btn btn-primary">Log In</button>
          </div>
        </form>
      </div>
    </div>
    <div class="row my-5">
      <div class="col-md-12">
        <p class="small">if you haven`t account please registrate</p>
        <div class="d-grid gap-2">
          <a href="/register" id="toRegister" class="btn btn-danger">Registration</a>
        </div>
      </div>
    </div>
  </div>
  <div class="col-md-4"></div>
</div>
